# =============================================================
# Mimic — Environment Variables
# Copy to .env and fill in values for local development.
# =============================================================

# PostgreSQL connection string (Render provides this)
DATABASE_URL=postgresql://user:password@host:5432/mimic_db

# Flask secret key for sessions/JWT
SECRET_KEY=change-me-to-a-random-string

# Flask environment: development or production
FLASK_ENV=development

# Frontend URL for CORS and OAuth redirects
FRONTEND_URL=http://localhost:5173

# xAI Grok API (Phase 2)
GROK_API_KEY=your-xai-api-key
GROK_API_URL=https://api.x.ai/v1/chat/completions

# Google OAuth (Phase 1.5)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Lumen CMS (future — Phase 8)
# LUMEN_API_URL=https://cms.example.com/api
# LUMEN_API_KEY=your-lumen-api-key
